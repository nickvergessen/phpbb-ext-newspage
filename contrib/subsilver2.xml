<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.5.xsd">
	<header>
		<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>

		<title lang="en">NV newspage</title>

		<description lang="en">see normal install-/update-file</description>

		<author-group>
			<author>
				<realname>Joas Schilling</realname>
				<email>nickvergessen@gmx.de</email>
				<username>nickvergessen</username>
				<homepage>http://www.flying-bits.org</homepage>
				<contributions />
			</author>
		</author-group>

		<mod-version>1.0.3</mod-version>

		<installation>
			<level>easy</level>
			<time>300</time>
			<target-version>3.0.8</target-version>
		</installation>

		<link-group>
			<link type="parent" lang="de" href="../install.xml">Installations-Anleitung</link>
			<link type="parent" lang="en" href="../install.xml">Installation-Manual</link>
		</link-group>
	</header>

	<action-group>
		<copy>
			<file from="root/styles/subsilver2/template/newspage_body.html" to="styles/subsilver2/template/newspage_body.html" />
		</copy>

		<open src="styles/subsilver2/template/overall_header.html">
			<edit>
				<find><![CDATA[<a href="{U_FAQ}"><img src="{T_THEME_PATH}/images/icon_mini_faq.gif" width="12" height="13" alt="*" /> {L_FAQ}</a>]]></find>
				<action type="after-add"><![CDATA[<a href="{U_NEWS}">&nbsp; &nbsp;<img src="{T_THEME_PATH}/images/icon_mini_faq.gif" width="12" height="13" alt="*" /> {L_NEWS}</a>]]></action>
			</edit>
		</open>
	</action-group>
</mod>